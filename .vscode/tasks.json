{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file with raylib",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I", "C:/msys64/mingw64/include",
                "-I", "${workspaceFolder}/Helper",
                "-I", "${workspaceFolder}/Math",
                "-I", "${workspaceFolder}/Object",
                "-I", "${workspaceFolder}/Rendering",
                "-I", "${workspaceFolder}/Scenes",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/Helper/*.cpp",
                "${workspaceFolder}/Math/*.cpp",
                "${workspaceFolder}/Object/*.cpp",
                "${workspaceFolder}/Rendering/*.cpp",
                "${workspaceFolder}/Scenes/*.cpp",
                "-L", "C:/msys64/mingw64/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task with raylib linking"
        }
    ]
}
